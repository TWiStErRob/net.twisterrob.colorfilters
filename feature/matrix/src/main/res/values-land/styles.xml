<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="perpendicularOrientation">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="matrix_component">
		<item name="android:layout_width">48sp</item>
		<item name="android:layout_height">0sp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:background">@drawable/matrix_order_component</item>
	</style>
</resources>
