<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	>
	<LinearLayout
		android:id="@+id/about_app"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/margin"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:orientation="vertical"
		>
		<TextView
			android:id="@+id/about_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/app_name"
			android:gravity="center"
			android:singleLine="true"
			/>
		<TextView
			android:id="@+id/about_version"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/cf_about_version"
			android:gravity="center"
			/>
		<TextView
			android:id="@+id/about_package"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/app_package"
			android:gravity="center"
			android:visibility="gone"
			tools:visibility="visible"
			/>
		<TextView
			android:id="@+id/about_feedback"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/activity_margin"
			android:text="@string/cf_about_feedback"
			android:gravity="center"
			/>
	</LinearLayout>
	<ImageView
		android:layout_width="144dp"
		android:layout_height="144dp"
		android:layout_margin="@dimen/margin"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/about_app"
		android:src="@drawable/ic_launcher"
		tools:ignore="ContentDescription"
		/>
</RelativeLayout>
